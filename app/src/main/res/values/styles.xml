<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextView.OverView" parent="@android:style/TextAppearance.Widget.TextView">
    <item name="android:layout_margin">@dimen/default_margin</item>
    <item name="android:textSize">@dimen/textSize</item>
    <item name="android:textColor">@color/text_white</item>
    <item name="android:maxLines">5</item>
  </style>

  <style name="TextView.Rating" parent="@android:style/TextAppearance.Widget.TextView">
    <item name="android:layout_margin">@dimen/offset_4</item>
    <item name="android:textSize">@dimen/textSize_rating</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_black</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/ic_star_gold</item>
    <item name="android:inputType">numberDecimal</item>
  </style>

</resources>
